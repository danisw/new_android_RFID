<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="5dp" android:color="#3FC2CB" />
            <solid android:color="#DDDDDD" />
            <corners android:topLeftRadius="14dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>

        </shape>
    </item>

    <item android:left="4dp" android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="0dp" android:color="#3FC2CB" />
            <solid android:color="#DDDDDD" />
            <corners android:topLeftRadius="14dp" android:topRightRadius="0dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>