<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/myCard"
        android:layout_marginTop="75dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="#E4E9EF"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/left_stroke">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01020901000242"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:id="@+id/kode_barang"
                            android:textColor="@color/colorPrimaryDark"/>
                        <TextView
                            android:id="@+id/no_WTR_barang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="New Text"
                            android:textColor="#000"
                            android:visibility="gone" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACS/Isolasi Hijau 48x100/Daimaru/48mmx100mx0,045mm/00"
                            android:textSize="27px"
                            android:id="@+id/nama_barang"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimaryDark"/>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 Roll"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:id="@+id/qty_barang"
                            android:textColor="@color/colorPrimaryDark"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/left_radius">
                        <ImageView
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:src="@drawable/nfc_scann"
                            android:visibility="gone"/>
                        <Button
                            android:id="@+id/btnScanSS"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:background="@drawable/nfc_scann"
                            />
                        <Button
                            android:id="@+id/btnPick"
                            android:layout_marginTop="-65dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:background="@drawable/nfc_scann"
                            android:visibility="invisible" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="scan"
                            android:layout_marginTop="10dp"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="#3FC2CB"
                android:gravity="center_vertical"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="7dp"
                        android:text="History Qty: 0"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:id="@+id/history_pick"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Qty Sisa : 15"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:layout_marginRight="6dp"
                        android:id="@+id/sisa_pick"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/qty_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uid"
                android:layout_marginTop="10dp"
                android:text="New Text"
                android:textColor="#000"
                android:visibility="gone" />
            <TextView
                android:id="@+id/uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RL1"
                android:layout_marginTop="10dp"
                android:text="New Text"
                android:textColor="#000"
                android:visibility="gone" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:contentPadding="16dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/myCardlama"
        android:visibility="gone"
        >
        <FrameLayout
            android:background="@color/colorPrimary"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:clipToPadding="false"/>

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/kode_barang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-condensed"
                android:text="New Text"
                android:textColor="#000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnScanSS2"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"
                android:text="Scan"
                android:textSize="8pt"
                android:textColor="#ffff"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnPick2"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:backgroundTint="@color/accent"
                android:fontFamily="sans-serif-condensed"
                android:text="Pick"
                android:textSize="8pt"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/no_WTR_barang2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="New Text"
                android:textColor="#000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nama_barang2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kode_barang2"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-condensed"
                android:text="New Text"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/qty_barang2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/nama_barang2"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-condensed"
                android:text="0"
                android:textColor="#000"
                android:textSize="30dp" />

            <RelativeLayout
                android:id="@+id/RL1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/qty_barang2"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="History Pick : "
                        android:textColor="#000"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/history_pick2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_toRightOf="@id/LL1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_sisa_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/LL2"
                        android:text="SisaPick : "
                        android:textColor="#000"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/sisa_pick2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="13dp" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/uid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RL1"
                android:layout_marginTop="10dp"
                android:text="New Text"
                android:textColor="#000"
                android:visibility="gone" />

            <TextView
                android:id="@+id/qty_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uid2"
                android:layout_marginTop="10dp"
                android:text="New Text"
                android:textColor="#000"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/uid2"

                android:layout_alignParentLeft="true"
                android:gravity="left|bottom"></LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>