<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="15dp">

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GRID LAYOUT"
                android:textColor="@android:color/white"
                android:textSize="34sp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search By WTR Number"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/textGrid"
                android:id="@+id/edittext"
                android:drawableRight="@drawable/ic_search_black_24dp"
                >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textGrid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="GRID LAYOUT"
                android:textColor="@android:color/white"
                android:textSize="34sp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search By Item Code"
                android:background="@drawable/edittext_bg"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/textGrid"
                android:id="@+id/edittext2"
                android:drawableRight="@drawable/ic_search_black_24dp"
                >
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#32B2BA"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WTR770199-0096242"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"/>

                            <View
                                android:layout_marginLeft="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_gravity="center"
                                android:background="@drawable/gradient" />

                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biscuit Section"
                                android:textSize="47px"
                                android:textStyle="bold"
                                android:textColor="@color/divider"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 - Sept - 2019 | Shift - 1"
                                android:textSize="17sp"
                                android:textStyle="bold"
                                android:textColor="@color/divider"
                                android:paddingBottom="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="7"
                android:background="#E4E9EF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/left_stroke"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        >
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginTop="7dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01020901000242"
                                android:textSize="27sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"/>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ACS/Isolasi Hijau 48x100/Daimaru/48mmx100mx0,045mm/00"
                                android:textSize="27px"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"/>
                            <TextView
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 Roll"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:paddingBottom="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/left_radius">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/ic_delete_forever_black_24dp">
                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delete"
                                android:textSize="15sp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="#3FC2CB"
                    android:gravity="center_vertical"
                    android:weightSum="2"
                    android:paddingBottom="2dp"
                    >

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginLeft="7dp"
                            android:gravity="center"
                            android:text="Card UID"
                            android:textColor="#000"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="6dp"
                            android:layout_marginRight="6dp"
                            android:gravity="center"
                            android:text="Qty"
                            android:textColor="#000"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="#32B2BA"
                    android:gravity="center_vertical"
                    android:weightSum="3"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="7dp"
                            android:text="2F : EB : 7E : 01"
                            android:textColor="#000"
                            android:padding="1dp"
                            android:background="@color/divider"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_clear_black_24dp">
                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:gravity="center"
                            android:textColor="#000"
                            android:background="@color/divider"
                            android:textSize="13dp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="#3FC2CB"
                    android:gravity="center_vertical"
                    android:weightSum="3"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="7dp"
                            android:text="3E : CG : 5B : 04"
                            android:textColor="#000"
                            android:padding="1dp"
                            android:background="@color/divider"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_clear_black_24dp">
                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:gravity="center"
                            android:textColor="#000"
                            android:background="@color/divider"
                            android:textSize="13dp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="#32B2BA"
                    android:gravity="center_vertical"
                    android:weightSum="3"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    >

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_marginLeft="7dp"
                            android:text="1F : FD : 2E : 02"
                            android:textColor="#000"
                            android:padding="1dp"
                            android:background="@color/divider"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_clear_black_24dp">
                        </ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="5"
                            android:gravity="center"
                            android:textColor="#000"
                            android:background="@color/divider"
                            android:textSize="13dp"
                            android:padding="2dp"
                            android:textStyle="bold"
                            android:layout_marginRight="6dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>




